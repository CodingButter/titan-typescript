{
  "compilerOptions": {
    "baseUrl": "./", // Root directory for imports
    "paths": {
      "@components/*": ["src/components/*"], // Example alias
      "@utils/*": ["src/utils/*"] // Another alias
    },
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
